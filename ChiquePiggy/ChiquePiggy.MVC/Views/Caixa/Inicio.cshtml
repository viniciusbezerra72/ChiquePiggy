@model ChiquePiggy.Models.CaixaViewModel

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container  h-100">
    <div class="row h-200 justify-content-center align-items-center">
        @using (Html.BeginForm("Inicio", "Caixa", FormMethod.Post))
        {
            if (TempData["novo_cliente"] == null)
            {
                <div>
                    <label class="control-label">Id do Cliente</label>
                    @Html.EditorFor(x => x.idCliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ensira o ID do cliente" } })

                </div>
            }

            if (TempData["novo_cliente"] != null)
            {
                <div>
                    <label class="control-label">Nome do Cliente</label>
                    @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Ensira o nome do cliente" } })
                </div>
            }

            <div class="form-group">
                <label class="control-label">Valor Total da Compra</label>
                @Html.EditorFor(x => x.valorDaCompra, new { htmlAttributes = new { @class = "form-control", placeholder = "Ensira o valor da compra" } })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Concluir</button>

            </div>



            if (TempData["novo_cliente"] != null)
            {
                <div class="alert-danger">
                    @TempData["novo_cliente"]
                </div>

            }
            if (TempData["mensagem"] != null)
            {
                <div class="alert-success">
                    @TempData["mensagem"]
                </div>

            }

        }
        @{
            if (TempData["pontuacao100"] != null)
            {
                using (Html.BeginForm("BaixaPontuacao", "Caixa", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.idCliente)
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Baixa pontuação</button>

                    </div>
                }
            }
        }
    </div>
</div>



